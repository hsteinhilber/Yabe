<p id="notice"><%= notice %></p>

<%= render @post %>

<p>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, :method => :delete, :confirm => "Are you sure?" %> |
  <%= link_to 'See All Posts', posts_path %>
</p>

<section id="comments">
  <header>
    <h1>Comments</h1>
  </header>
  <%= render @post.comments %>
</section>
