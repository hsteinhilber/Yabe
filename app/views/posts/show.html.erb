<%= render @post %>

<%= render_editor_links(@post) %>

<section id="tags">
  <label>Tags:</label>
  <ul>
    <% @post.tags.each do |t| %>
      <li><%= t.name %></li>
    <% end %>
  </ul>
</section>

<section id="comments">
  <header>
    <h1>Comments</h1>
  </header>
  <%= render @post.comments %>
  <footer>
    <%= render 'comments/form' %>
  </footer>
</section>
